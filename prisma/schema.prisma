// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Place {
  id     Int      @id @default(autoincrement())
  name   String
  img    String
  Schema Schema[]
}

model Schema {
  id           Int            @id @default(autoincrement())
  name         String
  energyCost   Int
  placeId      Int
  img          String
  place        Place          @relation(fields: [placeId], references: [id])
  SchemaRecipe SchemaRecipe[]
  ItemRecipe   ItemRecipe[]
}

model ItemCategory {
  id               Int            @id @default(autoincrement())
  name             String
  parentCategoryId Int?
  parentCategory   ItemCategory?  @relation("CategoriesStructure", fields: [parentCategoryId], references: [id])
  subCategories    ItemCategory[] @relation("CategoriesStructure")
  Item             Item[]
}

model Item {
  id                       Int              @id @default(autoincrement())
  itemCategoryId           Int
  category                 ItemCategory     @relation(fields: [itemCategoryId], references: [id])
  name                     String
  price                    Int
  img                      String
  SchemaRecipe             SchemaRecipe[]
  ResearchRecipeItemRecipe ResearchRecipe[] @relation("ItemResearchRecipe")
  ResearchRecipeItemCost   ResearchRecipe[] @relation("ItemReseaarchCost")
  ItemRecipeList           ItemRecipeList[]
  ItemRecipe               ItemRecipe[]
}

model SchemaRecipe {
  id       Int    @id @default(autoincrement())
  schemaId Int
  schema   Schema @relation(fields: [schemaId], references: [id])
  itemId   Int
  item     Item   @relation(fields: [itemId], references: [id])
  quantity Int
}

model Point {
  id             Int              @id @default(autoincrement())
  name           String
  img            String
  ResearchRecipe ResearchRecipe[]
}

model ResearchRecipe {
  id         Int   @id @default(autoincrement())
  itemId     Int
  item       Item  @relation("ItemResearchRecipe", fields: [itemId], references: [id])
  costItemId Int
  costItem   Item  @relation("ItemReseaarchCost", fields: [costItemId], references: [id])
  energyCost Int
  pointId    Int
  point      Point @relation(fields: [pointId], references: [id])
  pointCount Int
}

model ItemRecipeList {
  id         Int        @id @default(autoincrement())
  recipeId   Int
  recipe     ItemRecipe @relation(fields: [recipeId], references: [id])
  costItemId Int
  costItem   Item       @relation(fields: [costItemId], references: [id])
  quantity   Int
}

model ItemRecipe {
  id             Int              @id @default(autoincrement())
  itemId         Int
  item           Item             @relation(fields: [itemId], references: [id])
  stationId      Int
  station        Schema           @relation(fields: [stationId], references: [id])
  energyCost     Int
  quantity       Int
  ItemRecipeList ItemRecipeList[]
}
