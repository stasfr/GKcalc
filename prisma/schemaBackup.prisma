// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Place {
  id   Int    @id @default(autoincrement())
  name String
}

model Schema {
  id           Int            @id @default(autoincrement())
  name         String
  energyCost   Int
  SchemaRecipe SchemaRecipe[]
  Station      Station[]
}

model ItemCategory {
  id               Int            @id @default(autoincrement())
  name             String
  parentCategoryId Int?
  parentCategory   ItemCategory?  @relation("CategoriesStructure", fields: [parentCategoryId], references: [id])
  subCategories    ItemCategory[] @relation("CategoriesStructure")
  Item             Item[]
}

model Item {
  id                       Int              @id @default(autoincrement())
  itemCategoryId           Int
  category                 ItemCategory     @relation(fields: [itemCategoryId], references: [id])
  name                     String
  price                    Int
  SchemaRecipe             SchemaRecipe[]
  ResearchRecipeItemRecipe ResearchRecipe[] @relation("ItemResearchRecipe")
  ResearchRecipeItemCost   ResearchRecipe[] @relation("ItemReseaarchCost")
  ItemRecipeListItemRecipe ItemRecipeList[] @relation("ItemRecipe")
  ItemRecipeListItemCost   ItemRecipeList[] @relation("ItemCost")
}

model SchemaRecipe {
  id       Int    @id @default(autoincrement())
  schemaId Int
  schema   Schema @relation(fields: [schemaId], references: [id])
  itemId   Int
  item     Item   @relation(fields: [itemId], references: [id])
}

model Point {
  id             Int              @id @default(autoincrement())
  name           String
  ResearchRecipe ResearchRecipe[]
}

model ResearchRecipe {
  id         Int   @id @default(autoincrement())
  itemId     Int
  item       Item  @relation("ItemResearchRecipe", fields: [itemId], references: [id])
  costItemId Int
  costItem   Item  @relation("ItemReseaarchCost", fields: [costItemId], references: [id])
  energyCost Int
  pointId    Int
  point      Point @relation(fields: [pointId], references: [id])
  pointCount Int
}

model ItemRecipeList {
  id         Int        @id @default(autoincrement())
  itemId     Int
  item       Item       @relation("ItemRecipe", fields: [itemId], references: [id])
  costItemId Int
  costItem   Item       @relation("ItemCost", fields: [costItemId], references: [id])
  recipeId   Int
  recipe     ItemRecipe @relation(fields: [recipeId], references: [id])
  quantity   Int
}

model Station {
  id         Int          @id @default(autoincrement())
  schemaId   Int
  schema     Schema       @relation(fields: [schemaId], references: [id])
  ItemRecipe ItemRecipe[]
}

model ItemRecipe {
  id             Int              @id @default(autoincrement())
  stationId      Int
  station        Station          @relation(fields: [stationId], references: [id])
  energyCost     Int
  ItemRecipeList ItemRecipeList[]
}
